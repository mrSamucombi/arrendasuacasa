{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "routes/**/*.ts",
    "lib/**/*.ts",
    "middleware/**/*.ts",
    "types/**/*.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}